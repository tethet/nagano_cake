<h2>商品一覧</h2>

<%= link_to new_admin_item_path,class: 'btn btn-outline-secondary btn-block' do %>
<i class="fas fa-plus-circle"></i>
<% end %>

<% @item.each do |item| %>
<p>商品ID</p>
<span>
  <%= link_to item.id, admin_item_path(item.id) %>
</span> 

<p>商品名</p>
<span><%= item.name %></span>

<p>税抜価格</p>
<span><%= item.price_without_tax %></span>

<p>ジャンル</p>
<span><%= item.genre_id %></span>

<p>ステータス</p>
<span>
  <% if item.item_status? %>
  <p>販売中</p>
  <% else %>
  <p>販売停止中</p>
  <% end %>
</span> 
<% end %>

<%= paginate @item %>